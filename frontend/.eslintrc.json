{
    "extends": [
        "next/core-web-vitals",
        "next/typescript",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
        {
            "files": ["**/*{.ts,.tsx,.js,.jsx}"],
            "excludedFiles": [
                "src/components/ui/**/*",
                ".next/**/*",
                "node_modules/**/*",
                "**/*.d.ts"
            ]
        }
    ],
    "rules": {
        "@typescript-eslint/no-require-imports": "off"
    }
}
